<div class="container-fluid">
    <br />
    <!--breadcrumb row-->
    <div class="row">
        <div class="col-md-12">
            <ol class="breadcrumb">
                <li><a href="#">Dashboard</a></li>
                <li><a href="#">Trail</a></li>
                <li><a href="#">Patient</a></li>
                <li class="active">Pattern Comparison</li>
            </ol>
        </div>
    </div>

    <!--Aggregate Chart Row-->
    <div class="row">
        <div class="col-md-12">
            <h3>display the aggregate chart here</h3>
        </div>
    </div>

    <br />
    <!-- Attempt Details Row -->
    <div class="row">
        <div class="col-md-12">

            <!-- attempt collapsible list-->
            <div class="col-md-6">
                <div id="accordion" role="tablist" aria-multiselectable="true">
                    {{#each attempts}}

                        <div class="card">
                            <div class="card-header" role="tab" id="heading{{@index}}">
                                <h5 class="mb-0">
                                    <a data-toggle="collapse" data-parent="#accordion" href="#collapse{{@index}}" aria-expanded="true" aria-controls="collapse{{@index}}">
                                        Attempt: {{createdAt}}
                                    </a>
                                </h5>
                            </div>

                            <div id="collapse{{@index}}" class="collapse hide" role="tabpanel" aria-labelledby="heading{{@index}}">
                                {{#each questions}}
                                    <!-- TODO - step wise interaction module for questions -->

                                    <div class="card">
                                        <div class="card-header">
                                            Question: {{questionOrder}} / {{isCorrect}}

                                            {{#if isCorrect}}
                                                <label class="label label-success pull-right"> Correct </label>
                                            {{else}}
                                                <label class="label label-danger pull-right"> InCorrect </label>
                                            {{/if}}
                                        </div>
                                        <div class="card-block">
                                            <p class="card-text">
                                                Display the image
                                            </p>
                                        </div>
                                    </div>

                                    {{timeTaken}} | {{questionOrder}} <br />
                                {{/each}}
                            </div>
                        </div>

                    {{/each}}
                </div>

            </div>

            <!-- selected attempt graph of time taken for each question-->
            <div class="col-md-6">
                time graph for each question attempt-wise
            </div>

        </div>
    </div>
</div>
