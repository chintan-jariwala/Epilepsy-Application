<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ser593.com.epilepsy.UserTasks.PatternComparisonProcessingActivity">
    <TableLayout
        android:id="@+id/tlResult"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        app:layout_widthPercent="70%">
    </TableLayout>
    <LinearLayout
        android:id="@+id/llStats"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        app:layout_widthPercent="30%"
        android:layout_toRightOf="@id/tlResult"
        android:layout_toEndOf="@id/tlResult">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Accuracy:"
            android:id="@+id/txtAccuracyLabel"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtAccuracy"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtAccuracyPercentage"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Avg. Time:"
            android:id="@+id/txtAvgLabel"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtAvgTime"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Return Home"
            android:id="@+id/btnReturn"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</android.support.percent.PercentRelativeLayout>



