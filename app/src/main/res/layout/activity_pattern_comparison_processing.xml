<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ser593.com.epilepsy.UserTasks.PatternComparisonProcessingActivity">

    <LinearLayout
        android:id="@+id/llShowTest"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        app:layout_heightPercent="70%">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/ivLeft"
            android:layout_gravity="center_vertical"
            android:layout_weight="45"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="@string/pattern_comparison_processing_left" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/ivCenter"
            android:layout_gravity="center_vertical"
            android:layout_weight="10"
            android:src="@drawable/ic_star"
            android:adjustViewBounds="false"
            android:scaleType="fitCenter"
            android:contentDescription="@string/pattern_comparison_processing_center" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/ivRight"
            android:layout_gravity="center_vertical"
            android:layout_weight="45"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:contentDescription="@string/pattern_comparison_processing_right" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        app:layout_heightPercent="30%"
        android:gravity="center_horizontal"
        android:layout_below="@id/llShowTest"
        android:id="@+id/llAnswer">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/ibYes"
            android:src="@drawable/ic_yes"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="#00ffffff"
            android:contentDescription="@string/pattern_comparison_processing_yes" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvHolder" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/ibNo"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_no"
            android:scaleType="centerCrop"
            android:background="#00ffffff"
            android:contentDescription="@string/pattern_comparison_processing_no"/>
    </LinearLayout>

</android.support.percent.PercentRelativeLayout>



