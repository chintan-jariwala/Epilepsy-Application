<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:layout_gravity="center"
    tools:context="ser593.com.epilepsy.Main.MainActivity">


    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btnSettings"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ic_gear" />


    <Button
        android:id="@+id/btnPromis"
        style="@style/customButton"
        android:layout_width="100dp"

        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="111dp"
        android:background="@drawable/btn_promis_normal" />

    <Button
        android:id="@+id/btnFingerTapping"
        style="@style/customButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/btnFlanker"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_spatial_normal" />

    <Button
        android:id="@+id/btnFlanker"
        style="@style/customButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/btnPatternComparison"

        android:layout_marginEnd="63dp"
        android:layout_toStartOf="@+id/btnPatternComparison"
        android:background="@drawable/btn_flankered_normal" />

    <Button
        android:id="@+id/btnPatternComparison"
        style="@style/customButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"

        android:layout_below="@+id/btnSettings"
        android:layout_marginEnd="55dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/btn_pattern_normal" />

    <TextView
        android:text="Welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTitle"
        android:textSize="30sp"
        android:layout_below="@+id/btnSettings"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Pattern\nComparison"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPattern"
        android:textSize="18sp"
        android:layout_below="@+id/btnPatternComparison"
        android:layout_alignStart="@+id/btnPatternComparison"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnSpacialSpan"
        style="@style/customButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/tvSpatial"
        android:layout_alignStart="@+id/tvPattern"
        android:background="@drawable/btn_span_normal" />

    <TextView
        android:text="Flanker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvFlanker"
        android:textSize="18sp"
        android:layout_below="@+id/btnFlanker"
        android:layout_toStartOf="@+id/btnPromis" />

    <TextView
        android:text="Finger\nTapping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTapping"
        android:textSize="18sp"
        android:layout_below="@+id/btnFingerTapping"
        android:layout_alignStart="@+id/tvFlanker"
        android:textAlignment="center" />

    <TextView
        android:text="Spatial\nSpan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvSpatial"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_below="@+id/btnFingerTapping"
        android:layout_toEndOf="@+id/tvTitle" />

    <TextView
        android:text="PROMIS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPromis"
        android:textSize="18sp"
        android:layout_marginBottom="87dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />


</RelativeLayout>
