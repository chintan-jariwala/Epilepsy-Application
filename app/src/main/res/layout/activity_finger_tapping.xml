<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ser593.com.epilepsy.FingerTappingActivity">

    <LinearLayout
        android:id="@+id/llShowTest"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        app:layout_heightPercent="70%">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="485dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:text="Please tap with your"
                    android:layout_width="142dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:textSize="30sp"
                    android:layout_weight="0.71" />

                <TextView
                    android:text="RIGHT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvSide"
                    android:layout_weight="0.07"
                    android:textSize="30sp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="hand!"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:layout_weight="0.13"
                    android:textSize="30sp" />
            </LinearLayout>

            <TextView
                android:text="Timer will start at first tap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textSize="24sp"
                android:textAlignment="center" />

            <TextView
                android:text="300"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvTimer"
                android:textSize="24sp"
                android:textAlignment="center" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:weightSum="1">

                <TextView
                    android:text="Number of taps:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9"
                    android:layout_weight="0.03"
                    android:textSize="18sp" />

                <TextView
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvCount"
                    android:layout_weight="0.05"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:text="Go ahead..."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvHint"
                android:textSize="24sp"
                android:textAlignment="center" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        app:layout_heightPercent="30%"
        android:gravity="center_horizontal"
        android:layout_below="@id/llShowTest"
        android:id="@+id/llAnswer">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/ibTapLeft"
            android:src="@drawable/ic_tap"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="#00ffffff"
            android:contentDescription="@string/pattern_comparison_processing_yes" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvHolder" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/ibTapRight"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_tap"
            android:scaleType="centerCrop"
            android:background="#00ffffff"
            android:contentDescription="@string/pattern_comparison_processing_no"/>
    </LinearLayout>

</android.support.percent.PercentRelativeLayout>



